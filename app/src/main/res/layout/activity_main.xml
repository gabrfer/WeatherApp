<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <!-- For fragments -->
    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:weightSum="1.0">

        <include layout="@layout/toolbar" />

        <LinearLayout
            android:id="@+id/linearLayoutEarth"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10sp"
            android:layout_weight="0.5"
            android:clickable="false"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:weightSum="1">

            <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/md_keylines"
                android:layout_marginLeft="@dimen/md_keylines"
                android:layout_marginRight="@dimen/md_keylines"
                android:layout_marginTop="@dimen/md_keylines"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="#e0e0e0"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.75">

                        <ImageView
                            android:id="@+id/imgViewEarth"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:cropToPadding="false"
                            android:scaleType="fitXY"
                            android:scrollbarAlwaysDrawHorizontalTrack="false"
                            android:src="@drawable/main_earth"
                            android:transitionName="earthMenu" />

                        <TextView
                            android:id="@+id/card_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/imgViewEarth"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="monospace"
                            android:gravity="center_vertical"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:textColor="@android:color/background_light"
                            android:textSize="18sp"
                            tools:text="El tiempo en la Tierra" />
                    </RelativeLayout>

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/card_text"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_alignLeft="@+id/card_title"
                        android:layout_alignStart="@+id/card_title"
                        android:layout_below="@+id/imgViewEarth"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.25"
                        android:ellipsize="end"
                        android:fontFamily="serif-monospace"
                        android:freezesText="true"
                        android:gravity="center_vertical"
                        android:maxLines="4"
                        android:text="Consulta la previsión metereológica de los próximos dias, los datos metereológicos de años atrás y la previsión para los meses venideros."
                        android:textColor="@android:color/black" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutMars"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:clickable="true"
            android:orientation="vertical">

            <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/md_keylines"
                android:layout_marginLeft="@dimen/md_keylines"
                android:layout_marginRight="@dimen/md_keylines"
                android:layout_marginTop="@dimen/md_keylines"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="#fff3e0"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.70">

                        <ImageView
                            android:id="@+id/card_image2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/main_mars" />

                        <TextView
                            android:id="@+id/card_title2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/card_image2"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="monospace"
                            android:gravity="center_vertical"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:textColor="@android:color/holo_orange_dark"
                            android:textSize="18sp"
                            tools:text="El tiempo en Marte" />

                    </RelativeLayout>

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/card_text2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.30"
                        android:ellipsize="end"
                        android:fontFamily="serif-monospace"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text="Consulta el tiempo en Marte, enviado por la sonda Curiosity"
                        android:textColor="@android:color/background_dark" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutBottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/linearLayoutAstronomic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:clickable="true"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardViewAstronomics"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/md_keylines"
                    app:cardBackgroundColor="#cfd8dc"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.65">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.70"
                                android:scaleType="fitXY"
                                app:srcCompat="@drawable/mainastronomic" />

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/imageView3"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="monospace"
                                android:text="Eventos astronómicos"
                                android:textColor="@color/cardview_light_background"
                                android:textSize="10sp" />

                        </RelativeLayout>

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/card_text3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.35"
                            android:ellipsize="end"
                            android:fontFamily="serif-monospace"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:text="Consulta los eventos astronómicos pasados y venideros"
                            android:textColor="@android:color/background_dark" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutTrivial"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:clickable="true"
                android:orientation="vertical"
                android:weightSum="1">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/md_keylines"
                    android:layout_weight="0.8"
                    app:cardBackgroundColor="#cfd8dc"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.7"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/main_trivial" />

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/autofitTextView4"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.3"
                            android:ellipsize="end"
                            android:fontFamily="serif-monospace"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:text="TRIVIAL"
                            android:textAlignment="center"
                            android:textColor="@android:color/background_dark"
                            android:textSize="10sp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_items" />

</android.support.v4.widget.DrawerLayout>