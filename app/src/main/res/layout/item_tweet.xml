<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/transparent"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@android:drawable/screen_background_light"
    app:cardElevation="@dimen/activity_vertical_margin">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3">

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="0.3"
                app:srcCompat="@drawable/user_33638_640" />

            <TextView
                android:id="@+id/txtDisplayName"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:fontFamily="serif-monospace"
                android:gravity="center_vertical"
                android:text="Antonio Leiva"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtUsername"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:fontFamily="serif-monospace"
                android:gravity="center_vertical"
                android:text="'@antonioLeiva'"
                android:textAlignment="gravity"
                android:textColor="@color/colorPrimaryDark" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <TextView
                android:id="@+id/txtTweet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="serif-monospace"
                android:paddingHorizontal="5dp"
                android:paddingVertical="5dp"
                android:text="Function references in Kotlin: use functions as lambdas everywhere. Function references in Kotlin: use functions as lambdas everywhere."
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="0.1">

            <ImageView
                android:id="@+id/imgTwitterLogo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:scaleX="0.7"
                android:scaleY="0.7"
                app:srcCompat="@drawable/twitter_logo_blue_silver" />

            <TextView
                android:id="@+id/txtTwitterLit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:fontFamily="serif-monospace"
                android:gravity="center_vertical"
                android:text="Twitter"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/txtTweetDatetime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:fontFamily="serif-monospace"
                android:gravity="center_vertical"
                android:text="26 Enero 2018 - 14:51"
                android:textColor="@color/colorPrimaryDark" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1">

            <TextView
                android:id="@+id/txtTweetUrl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="serif-monospace"
                android:text="https://twitter.com/lime_cl/status/956479307957919744"
                android:textColor="@color/wallet_link_text_light"
                android:textSize="10sp" />
        </TableRow>
    </TableLayout>
</android.support.v7.widget.CardView>